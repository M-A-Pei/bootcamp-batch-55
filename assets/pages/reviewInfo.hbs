<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/main.css">
    <script src="https://kit.fontawesome.com/0412fad157.js" crossorigin="anonymous"></script>
  </head>
  <body>
      {{>navbar}}

      <div class="container-fluid">
        
        <div class="row">
            <div class="col-sm-12 d-flex flex-column justify-content-center align-items-center">
                <div class="card frame mt-4 border border-dark p-5 pt-3 w-75 h-auto rounded bg-dark" style="--bs-bg-opacity: .5;">
                    <div class="row">
                        <div class="col-md-12 d-flex flex-column align-items-center p-0">
                            <h1 class="text-warning mt-3" style="line-height: 5px;">{{id.name}}</h1>
                            <span id="time">{{id.stayed}}</span>
                            <img class="img-fluid rounded h-75 w-75" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTEs3tXIoHAMjpoI0IEO30AvHLQ2bcuoh3MfQ&s" alt="">
                            <div class="flex lh-lg mt-2"> 
                              {{#if id.burger}}
                                  <i class="fa-solid fa-burger text-dark mx-2 fa-xl"></i>
                              {{/if}}
                              {{#if id.pizza}}
                                  <i class="fa-solid fa-pizza-slice text-dark mx-2 fa-xl"></i>
                              {{/if}}
                              {{#if id.hotdog}}
                                  <i class="fa-solid fa-hotdog text-dark mx-2 fa-xl"></i>
                              {{/if}}
                              {{#if id.kelp}}
                                  <i class="fa-solid fa-wine-bottle text-dark mx-2 fa-xl"></i>
                              {{/if}}
                            </div>
                            <p class="card-text lh-bg">{{id.review}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>

    <script>
      const timeContainer = document.querySelectorAll("#time")
      timeContainer.forEach((e) => {
        e.textContent = e.textContent.slice(0, 15)
      })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>